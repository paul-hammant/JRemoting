<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>jremoting-parent</artifactId>
		<groupId>org.codehaus.jremoting</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jremoting-itests</artifactId>
	<name>JRemoting Integration Tests</name>
	<version>1.0-SNAPSHOT</version>
	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>jremoting-api</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>jremoting-client</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>jremoting-server</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>jremoting-tools</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>bcel</groupId>
			<artifactId>bcel</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>test-compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<taskdef name="jremoting-proxies"
									classname="org.codehaus.jremoting.tools.generator.ant.ProxyGeneratorTask">
									<classpath>
										<path
											refid="maven.test.classpath" />
									</classpath>
								</taskdef>

								<mkdir dir="target/genjava" />
								<jremoting-proxies genname="Hello"
									srcgendir="target/genjava"
									classgendir="${project.build.testOutputDirectory}"
									verbose="true"
									interfaces="org.codehaus.jremoting.test.TestInterface"
									additionalfacades="org.codehaus.jremoting.test.TestInterface3,org.codehaus.jremoting.test.TestInterface2"
									callbackfacades="org.codehaus.jremoting.test.TestCallBackListener">
									<classpath>
										<path
											refid="maven.test.classpath" />
										<pathelement
											location="${project.build.testOutputDirectory}" />
									</classpath>
								</jremoting-proxies>

								<jremoting-proxies
									genname="OurAccountManager" srcgendir="target/genjava"
									classgendir="${project.build.testOutputDirectory}"
									verbose="true"
									interfaces="org.codehaus.jremoting.test.clientcontext.AccountManager">
									<classpath>
										<path
											refid="maven.test.classpath" />
										<pathelement
											location="${project.build.testOutputDirectory}" />
									</classpath>
								</jremoting-proxies>

							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	
</project>
