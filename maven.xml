
<project xmlns:maven="jelly:maven" xmlns:j="jelly:core">

    <goal name="jremoting:install">
        <attainGoal name="multiproject:install"/>
    </goal>

    <goal name="jremoting:deploy">
        <attainGoal name="multiproject:deploy"/>
    </goal>

    <goal name="jremoting:site-deploy">
        <attainGoal name="multiproject:site-deploy"/>
    </goal>

    <goal name="jremoting:itests" prereqs="jremoting:install">
        <maven:reactor basedir="${basedir}/itests" postProcessing="true" includes="project.xml" excludes="" goals="test" banner="Running integration tests" ignoreFailures="true"/>
    </goal>

    <goal name="jremoting:clean">
        <attainGoal name="multiproject:clean"/>
        <maven:reactor basedir="${basedir}/itests" postProcessing="true" includes="project.xml" excludes="" goals="clean" banner="Cleaning integration tests" ignoreFailures="true"/>
    </goal>

</project>
